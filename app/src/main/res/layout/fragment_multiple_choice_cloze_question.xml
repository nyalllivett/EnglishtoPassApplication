<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:clickable="true"
    android:focusable="true"
    tools:context=".QuestionFragments.MultipleChoiceClozeQuestion">

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/questionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/questionTitle"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="32dp"
                android:textSize="16sp" />

        </RelativeLayout>


    </ScrollView>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/settins_bar_blue_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </FrameLayout>


    <com.englishtopass.englishtopassapplication.CustomViews.SettingsFloatingActionButton
        android:id="@+id/viewTimerFab"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/fontSizeFab"
        app:layout_constraintEnd_toStartOf="@+id/fontSizeFab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fontSizeFab"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/timer_24dp"
        />

    <com.englishtopass.englishtopassapplication.CustomViews.SettingsFloatingActionButton
        android:id="@+id/fontSizeFab"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/viewPageFab"
        app:layout_constraintEnd_toStartOf="@+id/viewPageFab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewTimerFab"
        app:layout_constraintTop_toTopOf="@+id/viewPageFab"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/answer_24dp"
 />

    <com.englishtopass.englishtopassapplication.CustomViews.SettingsFloatingActionButton
        android:id="@+id/viewPageFab"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/hideSettingsFab"
        app:layout_constraintEnd_toStartOf="@+id/hideSettingsFab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fontSizeFab"
        app:layout_constraintTop_toTopOf="@+id/hideSettingsFab"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/view_24dp"
        />

    <com.englishtopass.englishtopassapplication.CustomViews.SettingsFloatingActionButton
        android:id="@+id/hideSettingsFab"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toStartOf="@+id/showSettingsFab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewPageFab"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        app:srcCompat="@drawable/hide_24dp"
        />

    <com.englishtopass.englishtopassapplication.CustomViews.MainSettingFloatingActionButton
        android:id="@+id/showSettingsFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:backgroundTint="@color/colorPrimary"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        app:srcCompat="@drawable/tool_box_24dp" />

    <FrameLayout
        android:id="@+id/settingsHolder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/showSettingsFab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/settingsHolder2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>